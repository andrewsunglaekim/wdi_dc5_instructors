<h2><%= @playlist.name %></h2>

<ul>
  <% @playlist.songs.each do |song| %>
    <li>
      <%= link_to("#{song.title} - #{song.artist.name}", song_path(song)) %>
    </li>
  <% end %>
</ul>

<h3>Add Song by ID</h3>
<form action="<%= add_song_to_playlist_path(@playlist) %>" method="post">
  <label  for="song_id">Song ID:</label>
  <input name="song_id">

  <input type="submit">
</form>

<h3>Remove Song by ID</h3>
<form action="<%= remove_song_to_playlist_path(@playlist) %>" method="post">
  <label  for="song_id">Artist ID:</label>
  <input name="song_id">

  <input type="submit">
</form>

<h3>Add Song by Title</h3>
<form action="<%= add_song_to_playlist_path(@playlist) %>" method="post">
  <select name="song_id">
    <% Song.all.each do |song| %>
      <option value="<%= song.id%>">
        <%= song.artist.name + " - " + song.title %>
      </option>
    <% end %>
  </select>
  <input type="submit">
</form>

<h3>Remove Song by Title</h3>
<form action="<%= remove_song_to_playlist_path(@playlist) %>" method="post">
  <select name="song_id">
    <% Song.all.each do |song| %>
      <option value="<%= song.id%>">
        <%= song.artist.name + " - " + song.title %>
      </option>
    <% end %>
  </select>
  <input type="submit">
</form>
